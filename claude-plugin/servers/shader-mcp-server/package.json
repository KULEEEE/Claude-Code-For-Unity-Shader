{
  "name": "unity-shader-mcp",
  "version": "0.1.2",
  "description": "MCP server for Unity shader analysis tools - connects Unity Editor to AI coding assistants via Model Context Protocol",
  "type": "module",
  "main": "dist/server.mjs",
  "bin": {
    "shader-mcp-server": "dist/server.mjs"
  },
  "files": [
    "dist/server.mjs"
  ],
  "scripts": {
    "build": "tsc",
    "bundle": "node esbuild.config.mjs",
    "watch": "tsc --watch",
    "start": "node dist/server.mjs",
    "prepublishOnly": "npm run build && npm run bundle"
  },
  "keywords": [
    "mcp",
    "unity",
    "shader",
    "hlsl",
    "model-context-protocol",
    "game-dev",
    "opencode",
    "claude",
    "cursor"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/KULEEEE/Claude-Code-For-Unity-Shader.git"
  },
  "homepage": "https://github.com/KULEEEE/Claude-Code-For-Unity-Shader#readme",
  "bugs": {
    "url": "https://github.com/KULEEEE/Claude-Code-For-Unity-Shader/issues"
  },
  "license": "MIT",
  "author": "KULEEEE",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "vscode-languageserver-protocol": "^3.17.5",
    "ws": "^8.16.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.10",
    "esbuild": "^0.27.3",
    "typescript": "^5.3.3"
  }
}
