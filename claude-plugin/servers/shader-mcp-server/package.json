{
  "name": "shader-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for Unity shader analysis tools",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "bundle": "esbuild build/index.js --bundle --platform=node --target=node18 --format=esm --outfile=dist/server.mjs --banner:js=\"import{createRequire}from'module';const require=createRequire(import.meta.url);\"",
    "watch": "tsc --watch",
    "start": "node dist/server.mjs",
    "prepublish": "npm run build && npm run bundle"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ws": "^8.16.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.10",
    "esbuild": "^0.27.3",
    "typescript": "^5.3.3"
  }
}
